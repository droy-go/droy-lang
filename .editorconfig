# =============================================================================
# Droy Language - EditorConfig File
# =============================================================================
# This file helps maintain consistent coding styles across various editors
# and IDEs. For more information: https://editorconfig.org
# =============================================================================

# Top-most EditorConfig file
root = true

# =============================================================================
# Default Settings (All Files)
# =============================================================================
[*]
# Character encoding
charset = utf-8

# Line endings
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Indentation
indent_style = space
indent_size = 4

# =============================================================================
# C/C++ Source Files
# =============================================================================
[*.{c,cpp,cc,cxx,h,hpp,hh,hxx,inl}]
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 100

# =============================================================================
# CMake Files
# =============================================================================
[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 4
max_line_length = 100

# =============================================================================
# Makefiles
# =============================================================================
[Makefile,*.mk]
indent_style = tab
indent_size = 4
tab_width = 4

# =============================================================================
# Shell Scripts
# =============================================================================
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# =============================================================================
# Python
# =============================================================================
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# =============================================================================
# Web Files
# =============================================================================
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2
max_line_length = 100

[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2
max_line_length = 100

[*.{html,htm}]
indent_style = space
indent_size = 2
max_line_length = 120

# =============================================================================
# Data Files
# =============================================================================
[*.{json,jsonc}]
indent_style = space
indent_size = 2
insert_final_newline = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 120

[*.xml]
indent_style = space
indent_size = 2
max_line_length = 120

# =============================================================================
# Configuration Files
# =============================================================================
[*.toml]
indent_style = space
indent_size = 2

[*.ini]
indent_style = space
indent_size = 4

[*.conf]
indent_style = space
indent_size = 4

# =============================================================================
# Documentation
# =============================================================================
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 120

[*.rst]
indent_style = space
indent_size = 3
max_line_length = 120

[*.txt]
indent_style = space
indent_size = 4
max_line_length = 80

# =============================================================================
# Git Files
# =============================================================================
[.git*]
indent_style = space
indent_size = 4

# =============================================================================
# Docker
# =============================================================================
[Dockerfile,Dockerfile.*,*.dockerfile]
indent_style = space
indent_size = 4

[docker-compose*.yml]
indent_style = space
indent_size = 2

# =============================================================================
# CI/CD
# =============================================================================
[.github/workflows/*.yml]
indent_style = space
indent_size = 2

[.travis.yml,.appveyor.yml,.gitlab-ci.yml]
indent_style = space
indent_size = 2

# =============================================================================
# Droy Language Files
# =============================================================================
[*.droy]
indent_style = space
indent_size = 4
max_line_length = 100

[*.droyh]
indent_style = space
indent_size = 4
max_line_length = 100

# =============================================================================
# Special Files (No Trailing Whitespace Trim)
# =============================================================================
[*.diff]
trim_trailing_whitespace = false

[*.patch]
trim_trailing_whitespace = false

# =============================================================================
# Binary Files (No Processing)
# =============================================================================
[*.{png,jpg,jpeg,gif,bmp,ico,webp,svgz}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset

[*.{pdf,doc,docx,xls,xlsx,ppt,pptx}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset

[*.{exe,dll,so,dylib,bin}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset

[*.{zip,tar,gz,bz2,7z,rar,xz}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
