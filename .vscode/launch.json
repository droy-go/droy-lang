{
    // =============================================================================
    // Droy Language - VS Code Launch Configuration
    // =============================================================================
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    // =============================================================================
    
    "version": "0.2.0",
    "configurations": [
        // =============================================================================
        // Debug Droy Compiler
        // =============================================================================
        {
            "name": "Debug Droy Compiler",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/droy-helper",
            "args": [
                "${workspaceFolder}/examples/hello.droy"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: Build",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        
        // =============================================================================
        // Debug Droy Compiler (LLDB - macOS)
        // =============================================================================
        {
            "name": "Debug Droy Compiler (LLDB)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/droy-helper",
            "args": [
                "${workspaceFolder}/examples/hello.droy"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "CMake: Build"
        },
        
        // =============================================================================
        // Debug Tests
        // =============================================================================
        {
            "name": "Debug Tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/droy-test",
            "args": [
                "lexer"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: Build",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        
        // =============================================================================
        // Debug Lexer Only
        // =============================================================================
        {
            "name": "Debug Lexer Test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/droy-test-lexer",
            "args": [
                "lexer"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: Build",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        
        // =============================================================================
        // Debug Parser Only
        // =============================================================================
        {
            "name": "Debug Parser Test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/droy-test-parser",
            "args": [
                "parser"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: Build",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        
        // =============================================================================
        // Attach to Running Process
        // =============================================================================
        {
            "name": "Attach to Process",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/build/bin/droy-helper",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        },
        
        // =============================================================================
        // Debug with Valgrind
        // =============================================================================
        {
            "name": "Debug with Valgrind",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/valgrind",
            "args": [
                "--leak-check=full",
                "--show-leak-kinds=all",
                "--track-origins=yes",
                "--vgdb=yes",
                "--vgdb-error=0",
                "${workspaceFolder}/build/bin/droy-helper",
                "${workspaceFolder}/examples/hello.droy"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Connect to Valgrind",
                    "text": "target remote | vgdb",
                    "ignoreFailures": false
                }
            ],
            "preLaunchTask": "CMake: Build",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
